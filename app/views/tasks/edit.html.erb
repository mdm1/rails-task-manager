<div class="container">
  <div class="container-title">
    <h1><%= @task.title %></h1>
  </div>

  <div class="container-details">
    <p> <%= @task.details %></p>
  </div>

  <%= form_for(@task) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
    <%= f.submit %>
  <% end %>

</div>

<%= link_to 'Back to list', tasks_path %>


