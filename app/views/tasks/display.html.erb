<div class="container">
  <h1><%= @task.title %></h1>

  <div class="container-details">
    <p> <%= @task.details %></p>
  </div>

  <form action="get">
      <p>
      <%= check_box_tag 'completed', 'done', @task.completed %>
      This task is <%= @result %>
      </p>
  </form>
</div>

<%= link_to 'Back to list', tasks_path %>
