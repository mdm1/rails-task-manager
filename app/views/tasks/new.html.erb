<div class="container">
  <div class="container-title">
    <h1>New Task</h1>
  </div>

  <div class="form-container">
    <%= form_for(@task, :html => {:class => "form-horizontal center"}) do |f| %>
      <div class="form-group">
        <%= f.label :title, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      </br>
      <div class="form-group">
        <%= f.label :details, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :details, class: "form-control" %>
        </div>
      </div>
      </br>
      <div class="form-group">
        <%= f.label :completed, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.check_box :completed, class: "form-control" %>
        </div>
      </div>
      </br>
        <%= f.submit %>
    <% end %>
  </div>

</div>

<%= link_to 'Back to list', tasks_path %>


