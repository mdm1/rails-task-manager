<div class="container">
  <div class="container-title">
    <h1>New Task</h1>
  </div>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title, class: "col-md-4 control-label" %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
  <%= f.label :details %>
  <%= f.text_field :details %>
  </div>
  <div class="form-group">
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  </div>
  <%= f.submit %>
<% end %>

</div>

<%= link_to 'Back to list', tasks_path %>


